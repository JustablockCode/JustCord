{
  "name": "justcord",
  "version": "0.0.1",
  "description": "Lightweight modded discord client.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --mac --win --linux",
    "build:mac": "electron-builder build --mac --publish always",
    "build:win": "electron-builder build --win --publish always",
    "build:linux": "electron-builder build --linux --publish always"
  },
  "keywords": [
    "discord",
    "justablock",
    "modded",
    "client",
    "justcord"
  ],
  "author": {
    "name": "justablock",
    "email": "bdfd000@gmail.com"
  },
  "license": "UNLICENSED",
  "devDependencies": {
    "electron": "^34.0.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.justablock.justcord",
    "productName": "JustCord",
    "mac": {
      "category": "public.app-category.social-networking",
      "target": ["dmg"]
    },
    "win": {
      "target": ["msi"]
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "category": "Network",
      "maintainer": "justablock <bdfd000@gmail.com>"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "icon": "assets/icons/icon.png"
  }
}
